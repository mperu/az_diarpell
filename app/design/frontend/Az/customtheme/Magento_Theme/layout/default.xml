<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/diarpell-logo_web.svg</argument>
                <argument name="logo_img_width" xsi:type="number">250</argument>
                <argument name="logo_img_height" xsi:type="number">45</argument>
            </arguments>
        </referenceBlock>
            <move element="catalog.topnav" destination="sidebar.main" htmlClass="hidden-sm col-md-3"/>
           <move element="category.products" destination="content.top"/>
        <move element="catalog.leftnav" destination="content.top"/>
    </body>
</page> 